<?xml version="1.0" encoding="windows-1251"?>
<backend>    
    <module>
        <id>mod_latestboard</id>
        <title>Новые объявления</title>
    </module>
    <params>
        <param type="number" name="shownum" title="Количество объявлений" units="шт." default="5" />
        <param type="flag" name="showcity" title="Показывать город" default="on" />
        <param type="list_db" name="cat_id" title="Объявления из рубрики" src="cms_board_cats" src_title="title" src_value="id" tree="1">
            <option title="-- Все рубрики --" value="-1" />
        </param>
        <param type="flag" name="subs" title="Вместе с подрубриками" default="off" />
    </params>
</backend>
