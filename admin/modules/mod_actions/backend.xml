<?xml version="1.0" encoding="utf-8"?>
<backend>    
    <module>
        <id>mod_actions</id>
        <title>Лента активности</title>
    </module>
    <params>

        <param type="number" name="limit" title="Количество записей в ленте" units="шт." default="15" />

        <param type="flag" name="show_target" title="Показывать место назначения" hint="Кроме ссылки на событие будет выводиться ссылка на раздел сайта" default="off" />

		<param type="flag" name="show_link" title="Показывать ссылку на всю ленту" default="on" />

        <param type="list_db" multiple="1" name="action_types" title="Типы событий" src="cms_actions" src_title="title" src_value="id" />

    </params>
</backend>
