<?xml version="1.0" encoding="windows-1251"?>
<backend>    
    <module>
        <id>mod_latestblogs</id>
        <title>Новое в блогах</title>
    </module>
    <params>

        <param type="list" name="namemode" title="Формат имени личных блогов" hint="Показывать название блога или имя его хозяина">
            <option title="Название блога" value="blog" />
            <option title="Имя пользователя" value="user" />
        </param>

        <param type="number" name="shownum" title="Количество новых записей" units="шт." default="5" />

		<param type="flag" name="showcom" title="Показывать число комментариев" default="on" />

        <param type="number" name="minrate" title="Ограничение по рейтингу" default="5" hint="Показывать записи с рейтингом выше указанного" />

        <param type="flag" name="showrss" title="Показывать ссылку на RSS" default="on" />
        
    </params>
</backend>
