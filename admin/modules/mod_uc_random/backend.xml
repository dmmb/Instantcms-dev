<?xml version="1.0" encoding="windows-1251"?>
<backend>    
    <module>
        <id>mod_uc_random</id>
        <title>Случайное в каталоге</title>
    </module>
    <params>

        <param type="list_db" name="cat_id" title="Записи из рубрики" src="cms_uc_cats" src_title="title" src_value="id" tree="1" />
        <param type="flag" name="subs" title="Вместе с подрубриками" default="off" />

        <param type="number" name="count" title="Количество записей" units="шт." default="5" />
      
        <param type="flag" name="showtitle" title="Показывать названия" default="on" />
        <param type="flag" name="showcat" title="Показывать рубрику" default="on" />
        
    </params>
</backend>
